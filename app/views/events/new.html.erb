<div class="form-container">
  <h2>New Event!</h2>

  <div class="form-wrapper">
    <%= form_with model: @event do |form| %>
      <div class="field">
        <%= form.label :title %><br>
        <%= form.text_field :title, class: "field-text" %>
      </div>

      <div class="field">
        <%= form.label :description %><br>
        <%= form.text_area :description %>
      </div>

      <div>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>