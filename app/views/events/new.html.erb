<h2>New Event</h2>

<%= form_with model: @event do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :start_date %><br>
    <%= f.date_field :start_date %>
  </div>
  <div>
    <%= f.label :end_date %><br>
    <%= f.date_field :end_date %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>