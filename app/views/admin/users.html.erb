<%= @users.count %>

<ul class="admin-list">
  <% @users.each do |user| %>
    <li class="user-list">
      <div>
        <%= user.name %>
      </div>

      <div class="btn-container">

        <% if user.admin %>
          <%= button_to "Admin", class: "not-admin-btn" %>
        <% else %>
          <%= button_to "Not Admin", class: "not-admin-btn" %>
          <% if user.authorized %>
            <%= button_to "Authorized", class: "auth-btn" %>
          <% else %>
            <%= button_to "Unauthorized", class: "unauth-btn"%>
          <% end %>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>