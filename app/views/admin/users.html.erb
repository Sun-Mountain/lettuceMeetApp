<%= @users.count %>

<ul>
  <% @users.each do |user| %>
    <li>
      <div>
        <%= user.name %>
      </div>

      <div>

        <% if user.admin? %>
          <%= form_for @user, url: admin_administration_url(@user) do |f| %>
            <%= f.hidden_field :id, value: user.id %>
            <%= f.submit "Admin", data: {test: "admin-user-#{user.id}"} %>
          <% end %>
        <% else %>
          <%= form_for @user, url: admin_administration_url(@user) do |f| %>
            <%= f.hidden_field :id, value: user.id %>
            <%= f.submit "Not Admin", data: {test: "not-admin-user-#{user.id}"} %>
          <% end %>
          <% if user.beta? %>
            <%= form_for @user, url: admin_authorization_url(@user) do |f| %>
              <%= f.hidden_field :id, value: user.id %>
              <%= f.submit "Authorized", data: {test: "auth-user-#{user.id}"} %>
            <% end %>
          <% else %>
            <%= form_for @user, url: admin_authorization_url(@user) do |f| %>
              <%= f.hidden_field :id, value: user.id %>
              <%= f.submit "Unauthorized", data: {test: "deauth-user-#{user.id}"} %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>