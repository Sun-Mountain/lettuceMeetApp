<%= @users.count %>

<ul class="admin-list">
  <% @users.each do |user| %>
    <li class="user-list">
      <div>
        <%= user.name %>
      </div>

      <div class="btn-container">

        <% if user.admin %>
          <%= button_to "Admin" %>
        <% else %>
          <% if user.authorized %>
            <%= button_to "Authorized" %>
          <% else %>
            <%= button_to "Unauthorized"%>
          <% end %>
          <%= button_to "Not Admin"%>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>